<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="container">
    <div class="listing-form-wrapper">
      <h3>Edit your <%= listing.title %></h3>
      <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
          <label for="title" class="form-label">Title</label>
          <input
            name="title"
            value="<%= listing.title %>"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback"> Please enter a title</div>
        </div>
        <br>
        <div>
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            id=""
            cols="30"
            rows="5"
            class="form-control"
            required
            value="<%= listing.description %>"><%= listing.description %></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

         <br>
        <div>
          <label for="image" class="form-label">Current Image</label>
          <img class="card-img-top index show edit" src="<%= listing.image.url %>" alt="">
        </div>
        <br>
        <!-- replacing text "no file chosen" -->
         <!--  -->
        <div>
          <label for="image" class="form-label">Upload new image</label>
          <input
            type="file"
            name="image"
            accept="image/*"
            class="form-control"
          />
          <div class="invalid-feedback">Image is required</div>
        </div>
        <br> 
        <div>
          <label for="price" class="form-label">Price</label>
          <input
            name="price"
            value="<%= listing.price %>"
            class="form-control"
            required
            type="number"
            min="0"
          />
          <div class="invalid-feedback">Enter a valid price</div>
        </div>
        <br> 
        <div>
          <label for="location" class="form-label">Location</label>
          <input
            name="location"
            value="<%= listing.location %>"
            class="form-control"
            required
            type="text"
          />
          <div class="invalid-feedback">Location is required</div>
        </div>
        <br> 
        <div>
          <label for="country" class="form-label">Country</label>
          <input
            name="country"
            value="<%= listing.country %>"
            class="form-control"
            required
            type="text"
          />
          <div class="invalid-feedback">Country is required</div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </form>
    </div>
  </div>
</body>

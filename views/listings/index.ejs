<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", (e) => {
        let taxInf = document.getElementsByClassName("tax-info");
        if (e.target.checked) {
            for (let i = 0; i < taxInf.length; i++) {
                taxInf[i].style.display = "inline";
            }
        } else {
            for (let i = 0; i < taxInf.length; i++) {
                taxInf[i].style.display = "none";
            }
        }
    })
</script>
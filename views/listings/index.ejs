        <div class="tax-toggle">
            <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Tax Inclusive</label>
            </div>
        </div>
    </div>
    <div class="row index">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card index" style="width: 18rem;">
                <img class="card-img-top index" src="<%= listing.image.url %>" alt="listing">
                <div class="card-body index">
                  <p class="card-text index">
                    <b><%= listing.title %></b> <br>
                    <span class="text-success index">
                        <%= listing.price.toLocaleString("en-IN", { style: "currency", currency: "INR"}) %>
                    </span> <span>/day</span> <i class="tax-info"> +18% GST  </i>
                    <br>
                    <i><%= listing.reviews.length %> reviews</i>
                    <br>
                    <span class="text-success index">
                        <b><%= listing.country %></b>
                    </span>
                </p>
                </div>
              </div>
            </a>
        <% } %>
    </div>

   



<% layout("/layouts/boilerplate.ejs") %>
    
    <!-- <div style="margin-left: 9rem; margin-top: 1.5rem; font-size: 2rem; font-weight: bold;" id="all-listings">All Listings</div> -->
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 1rem;
            margin: 1rem 0 0rem 9rem;
        }

        .filter {
            text-align: center;
            gap: 0.5rem;
            cursor: pointer;
            opacity: 0.7;            
            border: 1px solid rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 0.5rem 1rem;
            transition: opacity 0.3s ease-in-out;
        }

        .filter:hover {
            opacity: 1;
            color: #fe424d;
            border: 1px solid #fe424d;
        }

        .tax-toggle {
            display: flex;
            gap: 0.5rem;
            cursor: pointer;
            border: 1px solid #fe424d;
            color: #fe424d;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            transition: opacity 0.3s ease-in-out;
        }

        .tax-toggle:hover {
            opacity: 1;
            color: rgb(1, 120, 1);
            border: 1px solid green;
        }

        .tax-toggle.active {
            background-color: rgb(1, 120, 1);;
            color: rgb(1, 120, 1);;
        }

        .tax-info {
            display: none;
        }

    </style>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <span>Room</span>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <span>Iconic City</span>
        </div>

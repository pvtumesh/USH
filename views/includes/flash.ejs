<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show slide-down fade-in text-center mb-0 mt-3 p-2 fs-5 fw-semibold " role="alert">
    <%- success %>
    <button type="button" class="btn-close text-center fs-5 fw-semibold " data-bs-dismiss="alert" aria-label="Close" style="padding: 0.8rem;"></button>
  </div>
<% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show slide-down fade-in text-center mb-0 mt-3 p-2 fs-5 fw-semibold " role="alert">
    <%- error %>
    <button type="button" class="btn-close text-center fs-5 fw-semibold " data-bs-dismiss="alert" aria-label="Close" style="padding: 0.8rem;"></button>
  </div>
<% } %>

